{
	"manifest_version": 3,
	"name": "MeowVerse Guard",
	"version": "1.0.0",
	"description": "Annotate pages & links for traders; detect malicious patterns; enrich with GlueX.",
	"icons": {
		"16": "vite.svg",
		"32": "vite.svg",
		"48": "vite.svg",
		"128": "vite.svg"
	},
	"permissions": [
		"activeTab",
		"storage",
		"alarms",
		"tabs",
		"scripting"
	],
	"action": {
		"default_popup": "index.html",
		"default_title": "HL Hackathon Extension",
		"default_icon": {
			"16": "vite.svg",
			"32": "vite.svg",
			"48": "vite.svg",
			"128": "vite.svg"
		}
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["src/content/content.js"],
			"run_at": "document_idle"
		}
	],
	"background": {
		"service_worker": "src/background/background.js",
		"type": "module"
	},
	"web_accessible_resources": [
		{
			"resources": ["src/assets/*"],
			"matches": ["<all_urls>"]
		}
	],
	"host_permissions": ["<all_urls>"]
}
