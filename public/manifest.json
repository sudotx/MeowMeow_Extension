{
  "manifest_version": 3,
  "name": "MeowVerse",
  "version": "1.0.0",
  "description": "MeowVerse Extension",
  "icons": {
    "16": "vite.svg",
    "32": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  },
  "permissions": [
    "activeTab",
    "storage",
	"alarms",
	"tabs"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "HL Hackathon Extension",
    "default_icon": {
      "16": "vite.svg",
      "32": "vite.svg",
      "48": "vite.svg",
      "128": "vite.svg"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Open HL Hackathon Extension Popup"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
